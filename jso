//////////////     OBJECTS WITH FUNCTIONS //////////////
<script>
const person = {
fname:"John",
lname:"Cena",
age:25 
};
let txt = "";
for (let x in person) {
  txt += person[x] + "";
}
person.nationality = "English";
//document.getElementById("demo").innerHTML = txt;
document.getElementById('deno').innerHTML= person.firstname + "is"+ person.nationality +".";
</script

<script>
const person = {
firstname : " john",
lastname : "cena",
age : 50,
eyecolor : "blue"
};
//delete person.age;
delete person["age"];
document.getElementById("demo").innerHTML = person.firstname + "is" + person.age + "years old.";
</script>


<script>
const myObj = {
name : "Arshad",
age :30,
cars : {
car1 : "Ford",
car2 : "BMW",
car3 : "Fiat"
}
}
document.getElementById("demo").innerHTML = myObj.cars.car2;
</script>
